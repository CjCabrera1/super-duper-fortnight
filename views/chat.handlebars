<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat</title>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Chat Room</h2>
                        <div id="messages">
                            <!-- Messages will be appended here -->
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" id="message-input" class="form-control" placeholder="Write your message">
                            <button id="button-addon2" class="btn btn-outline-secondary">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include your chat-client.js -->
    <script src="/public/js/chat-client.js"></script>
</body>
</html>
