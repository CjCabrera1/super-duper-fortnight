<div class="container text-center">
    <div class="row">
        <div id="chat-room-list" class="col-2">
            ChatterRooms
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="button">Room 1</button>
                <button class="btn btn-primary" type="button">Room 2</button>
                <button class="btn btn-primary" type="button">Room 3</button>
            </div>
        </div>

        <div class="col-10">
            <div class="row">
                <div id="chat-header" class="col">
                    ChatterRoom
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <form>
                        <div class="mb-3">
                            <label for="message-input" class="form-label">Messages</label>
                            <input type="text" class="form-control" id="message-input" aria-describedby="message-help">
                            <div id="message-help" class="form-text">Type your message here.</div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Chatter here"
                                aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/public/js/chat-client.js"></script>
